#!/bin/fish

if set -q $argv
	set c1 brmagenta
	set c2 brcyan
else
	set c1 $argv[1]
	set c2 $argv[2]
end

set_color $c1

echo -E '  ::::::::::: :::    :::  ::::::::  :::::::::  ::::    ::: :::::::::: :::    ::: ::::::::::: :::        :::  ____  __ __      ';
echo -E '     :+:     :+:    :+: :+:    :+: :+:    :+: :+:+:   :+: :+:        :+:    :+:     :+:     :+:        :+:  /\'___\/\ \\ \     ';
echo -E '    +:+     +:+    +:+ +:+    +:+ +:+    +:+ :+:+:+  +:+ +:+        +:+    +:+     +:+     +:+        +:+  /\ \__/\ \ \\ \    ';
echo -E '   +#+     +#++:++#++ +#+    +:+ +#++:++#:  +#+ +:+ +#+ +#++:++#   +#++:++#++     +#+     +#+        +#+   \ \  _``\ \ \\ \_  ';
echo -E '  +#+     +#+    +#+ +#+    +#+ +#+    +#+ +#+  +#+#+# +#+        +#+    +#+     +#+     +#+        +#+     \ \ \L\ \ \__ ,__\\'; set_color -o $c2;
echo -E ' #+#     #+#    #+# #+#    #+# #+#    #+# #+#   #+#+# #+#        #+#    #+#     #+#     #+#        #+#       \ \____/\/_/\_\_/';
echo -E '###     ###    ###  ########  ###    ### ###    #### ########## ###    ### ########### ########## ##########  \/___/    \/_/  ';

set_color normal;

echo \n;
